<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1000016" id="org.theloyalty.scanner" ios-CFBundleVersion="0.2.0" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Loyalty Club Scanner</name>
    <description>
        Loyalty Club Scanner For Business'
    </description>
    <author email="kyle@northkode.com" href="theloyaltyclub.org">
        Kyle Jeske
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="CrosswalkAnimatable" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
    <plugin name="com.telerik.plugins.nativepagetransitions" spec="~0.6.5" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.5.0" />
    <plugin name="cordova-plugin-app-version" spec="~0.1.9" />
    <plugin name="android.support.v4" spec="https://github.com/floatinghotpot/cordova-plugin-android-support-v4" />
    <plugin name="cordova-plugin-x-toast" spec="~2.5.2" />
    <plugin name="onesignal-cordova-plugin" spec="https://github.com/onesignal/OneSignal-Cordova-SDK" />
    <plugin name="cordova-plugin-keyboard" spec="https://github.com/northkode/cordova-plugin-keyboard#tradepros_version" />
    <plugin name="cordova-plugin-file" spec="~4.3.0" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.0" />
    <plugin name="cordova-plugin-dialogs" spec="~1.3.0" />
    <plugin name="cordova-plugin-screen-orientation" spec="~1.4.2" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="~2.3.0" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-targetSdkVersion" value="23" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="xwalkVersion" value="23" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
    <plugin name="cordova-plugin-device" spec="~1.1.5" />
    <plugin name="cordova-launch-review" spec="~2.0.0" />
